{% extends 'DatacityPublicBundle:Template:pagebody.html.twig' %}


{% block title %}Datacity -- Page des news{% endblock %}
{% block pagetitle %}Les News{% endblock %}
{% block pagename %}Les News{% endblock %}


{% block pagecontent %}
	<section id="content">
	<div class="container">
		<div class="row">
			<div class="span4">
				<aside class="left-sidebar">
				<div class="widget">
					<form class="form-search">
						<input placeholder="Type something" type="text" class="input-medium search-query">
						<button type="submit" class="btn btn-square btn-theme">Search</button>
					</form>
				</div>
				{# Affichage des catégories #}
				<div class="widget">
					<h5 class="widgetheading">Categories</h5>
					<ul class="cat">
					{# Parcours de la liste des catégories envoyés par le controlleur #}
					{% for categories in categories %}
						<li><i class="icon-angle-right"></i><a href="#">{{ categories.getName() }}</a><span> ({{ categories.getNb_article() }})</span></li>
					{% endfor %}
					</ul>
				</div>
				{# Affichage des dernieres news #}
				<div class="widget">
					<h5 class="widgetheading">Latest posts</h5>
					<ul class="recent">
						<li>
						<img src="{{ asset('bundles/datacitypublic/img/dummies/blog/65x65/thumb1.jpg') }}" class="pull-left" alt="" />
						<h6><a href="#">Lorem ipsum dolor sit</a></h6>
						<p>
							 Mazim alienum appellantur eu cu ullum officiis pro pri
						</p>
						</li>
						<li>
						<a href="#"><img src="{{ asset('bundles/datacitypublic/img/dummies/blog/65x65/thumb2.jpg') }}" class="pull-left" alt="" /></a>
						<h6><a href="#">Maiorum ponderum eum</a></h6>
						<p>
							 Mazim alienum appellantur eu cu ullum officiis pro pri
						</p>
						</li>
						<li>
						<a href="#"><img src="{{ asset('bundles/datacitypublic/img/dummies/blog/65x65/thumb3.jpg') }}" class="pull-left" alt="" /></a>
						<h6><a href="#">Et mei iusto dolorum</a></h6>
						<p>
							 Mazim alienum appellantur eu cu ullum officiis pro pri
						</p>
						</li>
					</ul>
				</div>
				<div class="widget">
					<h5 class="widgetheading">Tags populaires</h5>
					<ul class="tags">
					{% for categories in categories %}
						<li><a href="#">{{ categories.getName() }}</a></li>
					{% endfor %}
					</ul>
				</div>
				</aside>
			{# Affichage des news #}
			</div>
			<div class="span8">
			{# Parcours de la liste des news envoyés par le controlleur #}
					{% for news in news %}
					<article>
						<div class="row">
					<div class="span8">
						<div class="post-image">
							<div class="post-heading">
								<h3><a href="#">{{ news.getTitle() }}</a></h3>
							</div>
							<img src="{{ news.getImg() }}" alt="" />
						</div>
						<p>
							 {{ news.getMessage() }}
						</p>
						
						<div class="bottom-article">
							<ul class="meta-post">
								<li><i class="icon-user"></i>{{ news.getUser().getUsername()}}</li>
								<li><p>{{ news.getDate() | date('d-m-Y H:i') }}</p></li>
							</ul>
						</div>
					</div>
				</div>
				</article>
				{% endfor %}
				{# Affichage de la pagination #}
				<div id="pagination">
					<span class="all">Page 1 of 3</span>
					<span class="current">1</span>
					<a href="#" class="inactive">2</a>
					<a href="#" class="inactive">3</a>
				</div>
			</div>
		</div>
	</div>
	</section>   
{% endblock %}
