{% extends 'DatacityPublicBundle:Template:pagebody.html.twig' %}
{% trans_default_domain "portal" %}

{# Ici, on configure les parametre de base de la page #}
{% block title %}Datacity -- Applications{% endblock %}
{% block pagetitle %}Applications{% endblock %}
{% block pagename %}Applications{% endblock %}

{% block pagecontent %}




	<section id="content">
	<div class="container">
		<div class="row">
			<div class="span12">
				<ul class="portfolio-categ filter">
					<li class="all active"><a href="#">{{ 'all'|trans }}</a></li>
					{# On parcour toutes les ville en DB pour generer le filtre par ville (inline) #}
					{% for city in filter_cities %}
							<li class="{{ city.name }} active"><a href="#">{{ city.name }}</a></li>
					{% endfor %}
				</ul>
				<div class="clearfix">
				</div>
				<div class="row">
					<section id="projects" class="section-apps">
					<ul id="thumbs" class="portfolio">
					{# Boucle for de creation des block correspondant aux applications en base de donnee #}
					{% set x = 0 %}
					{% set currentPagination = 1 %}
					{% set nbPaginationDisplay = 2 %}
					{% for appl in pagination %}
						<!-- Item Project and Filter Name -->
						<li class="item-thumbs span4 {{ appl.city.name }} prs-pagination-item prs-pagination-item-{{ currentPagination }}" data-id="id-{{ appl.id }}" data-type="{{ appl.city.name }}">
						<h5>{{ appl.name }}</h5>
						<!-- Fancybox - Gallery Enabled - Title - Full Image -->
						<a class="fancybox" data-fancybox-group="gallery" title="{{ appl.name }}" href="{{ path('datacity_public_appDetail', {'slug' : appl.slug }) }}">
						{% if appl.images[0] != null %}
						<img class="image-apps" src="{{ appl.images[0].url }}" alt="{{ appl.images[0].alt }}" >
						{% endif %}
						</a>
						<!-- Thumb Image and Description -->
						</li>
						{% set x = x + 1 %}
						{% if x % 2 == 0 %}
							{% set currentPagination = currentPagination + 1 %}
						{% endif %}
					{% endfor %}
					</ul>
					</section>
				</div>
			</div>
		</div>
	</div>
	</section>
	<div class="navigation-producers">
    	{{ knp_pagination_render(pagination) }}
	</div>

{% endblock %}
