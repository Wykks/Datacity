{% extends 'DatacityPublicBundle:Template:pagebody.html.twig' %}
{% block bodyattr %}data-ng-app="datacity.datasets"{% endblock %}
{% block title %}Datacity -- Page de vue des données{% endblock %}
{% block pagetitle %}Les données{% endblock %}
{% block pagename %}Les données{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'css/angular-mods.css'
		'css/datasetsearchmod.css'
	%}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular.min.js"></script>
	<script>typeof angular == "undefined" && document.write('<script src="{{ asset('js/angular.js') }}"><\/script>')</script>
	{% javascripts
		'js/angular-mods.js'
		'js/datasetsearchmod.js'
		'@DatacityPublicBundle/Resources/public/js/dataportal-app/polify.js'
	    '@DatacityPublicBundle/Resources/public/js/dataportal-app/app.js'
	    '@DatacityPublicBundle/Resources/public/js/dataportal-app/services.js'
	    %}
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block pagecontent %}
	<section id="content">
	<div class="container">
		<div class="row" data-ui-view>
			<div class="span12">
			      <p class="text-center">Chargement...</p>
			</div>
		</div>
	</div>
	</section>
{% endblock %}
