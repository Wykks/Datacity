{% extends 'DatacityPublicBundle:Template:pagebody.html.twig' %}

{% block title %}Datacity -- Portail Applicatif{% endblock %}
{% block pagetitle %}Portail Applicatif{% endblock %}
{% block pagename %}Application - Détail{% endblock %}
{% block pagecontent %}
	<section id="content">
		<div class="container">
			<div class="row">
				<div class="span8">
					<article>
					<div class="top-wrapper">
						<div class="post-heading">
							<h3><a href="#">{{ appli.getName() }}</a></h3>
						</div>
						<!-- start flexslider -->
						<div class="flexslider">
							<ul class="slides">
							{% for image in appli.getImages() %}
								<li>
									<img src="{{ image.getUrl() }}" alt="{{ image.getAlt() }}" />
								</li>
							{% endfor %}
							</ul>
						</div>
						<!-- end flexslider -->
					</div>
					<p>
						 {{ appli.getDescription() }}
					</p>
					</article>
				</div>
				<div class="span4">
					<aside class="right-sidebar">
					<div class="widget">
						<h5 class="widgetheading">Informations</h5>
						<ul class="folio-detail">
							<li><label>Categories :</label>  {% for cat in app_categories %}{{ cat }} {% endfor %}</li>
							<li><label>Client :</label> {{ app_client }}</li>
							<li><label>Plateformes :</label> {% for platform in app_platforms %}{{ platform }} {% endfor %}</li>
							<li><label>Téléchargements :</label> {{ app_downloaded }}</li>
							<li><label>Project URL :</label><a href="#"> {{ app_url }}</a></li>
						</ul>
					</div>
					<div class="widget">
						<h5 class="widgetheading">Sources</h5>
						<p>
							Toutes les données de cette application sont générées depuis des sources OpenData.
						</p>
					</div>
					</aside>
				</div>
			</div>
		</div>
	</section> 
{% endblock %}
