{% extends 'DatacityPublicBundle:Template:pagebody.html.twig' %}

{# Ici, on configure les parametre de base de la page #}
{% block title %}Datacity -- Producteurs{% endblock %}
{% block pagetitle %}Producteurs{% endblock %}
{% block pagename %}Producteurs{% endblock %}

{% block pagecontent %}
	<section id="content">
	<div class="container">
		<div class="row">
			<div class="span12">
				<div class="row">
					<section id="projects" style='min-height: 550px;'>
					<ul id="thumbs" class="portfolio">
					{# Boucle for de creation des block correspondant aux producteurs en base de donnee #}
					{% for producer in producers %}
						<!-- Item Project and Filter Name -->
						<li class="item-thumbs span4">
						<h5>{{ producer.name }}</h5>
						<!-- Fancybox - Gallery Enabled - Title - Full Image -->
						<a class="fancybox" data-fancybox-group="gallery" title="{{ producer.name }}" href="{{ path('datacity_public_producer_detail', {'slug' : producer.slug }) }}">
							<img style="max-height: 80px; width: auto;" src="{{ producer.image.url }}" alt="{{ producer.image.alt }}">
						</a>
						<!-- Thumb Image and Description -->
						</li>
					{% endfor %}
					</ul>
					</section>
				</div>
			</div>
		</div>
	</div>
	</section>
{% endblock %}
