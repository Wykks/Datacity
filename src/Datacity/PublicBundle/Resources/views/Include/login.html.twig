<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
	<h4 id="mySigninModalLabel">Login to your <strong>account</strong></h4>
</div>
<div class="modal-body">
	<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
	 	<input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
		<div class="control-group">
			<label class="control-label" for="inputText">Username</label>
			<div class="controls">
				<input type="text" id="inputText" name="_username" required="required" placeholder="Login" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputSigninPassword">Password</label>
			<div class="controls">
				<input type="password" id="inputSigninPassword" name="_password" required="required" placeholder="Mot de passe" />
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn">Se connecter</button>
			</div>
			<p class="aligncenter margintop20">
				Mot de passe oubli√© ? <a href="#myReset" data-dismiss="modal" aria-hidden="true" data-toggle="modal">Reset</a>
			</p>
		</div>
	</form>
</div>
