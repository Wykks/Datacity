{% extends 'DatacityPrivateBundle:Template:privatetemplate.html.twig' %}
{% block pageTitle %}Gestion des Actualités{% endblock %}
{% block lineTitleLink %}Gestion des Actualités{% endblock %}
{% block pagecontent %}

<h3></h3>

<div class="row">
				<div class="col-md-6 ">
					<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box green">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-reorder"></i>Formulaire d'ajout d'actualité
							</div>
							
						</div>
						<div class="portlet-body form">
							<form action="{{path('datacity_private_newsmanager_add')}}" method="post" {{ form_enctype(form) }}>
								<div class="form-body">
									<div class="form-group">
										<label>{{ form_label(form.title, "Titre de l'article") }}</label>
										 {{ form_errors(form.title) }}
										{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
									</div>
									<div class="form-group">
										<label>{{ form_label(form.message, "Contenu de l'article") }}</label>
										 {{ form_errors(form.message) }}
										{{ form_widget(form.message, {'attr': {'class': 'form-control', 'style': 'resize: none; height:200px'}}) }}
										
									</div>
									<div class="form-group">
										<label>{{ form_label(form.img, "Télécharger une image") }}</label>
										 {{ form_errors(form.img) }}
										{{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
									</div>
									<!--<div class="form-group">
										<label>{{ form_label(form.img, "Télécharger une image") }}</label>
										<input type="file" id="exampleInputFile1">
									</div>-->
									{{ form_rest(form) }}
								</div>
								<div class="form-actions">
									<center><input type="submit" class="btn green" value = "Ajouter l'actualité"></center>	
								</div>

  							</form>	
						</div>
					</div>
				</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
	<script type="text/javascript">
		$("#nav-newsmanager").addClass("active");
	</script>
{% endblock %}
