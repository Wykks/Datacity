{% trans_default_domain "profileSettings" %}

<div id="tab_1-1" class="tab-pane active">
    <form name="userChange" role="form" ng-submit="updateUser()">
        <div class="form-group">
            <label class="control-label">{{ 'profileSettings.firstname'|trans }}</label>
            <input type="text" ng-model="userInfos.firstname" placeholder="{{ 'profileSettings.yourFirstname'|trans }}" class="form-control" required/>
        </div>
        <div class="form-group">
            <label class="control-label">{{ 'profileSettings.lastname'|trans }}</label>
            <input type="text" ng-model="userInfos.lastname" placeholder="{{ 'profileSettings.yourLastname'|trans }}" class="form-control" required/>
        </div>
        <div class="form-group">
            <label class="control-label">{{ 'profileSettings.activity'|trans }}</label>
            <input type="text" ng-model="userInfos.occupation" placeholder="{{ 'profileSettings.yourActivity'|trans }}" class="form-control"/>
        </div>
        <div class="form-group">
            <label class="control-label">{{ 'profileSettings.about'|trans }}</label>
            <textarea class="form-control" rows="3" ng-model="userInfos.about" placeholder="{{ 'profileSettings.yourAbout'|trans }}"></textarea>
        </div>
        <div class="form-group">
            <label class="control-label">{{ 'profileSettings.website'|trans }}</label>
            <input type="url" name="homepage" ng-model="userInfos.websiteUrl" placeholder="{{ 'profileSettings.yourWebsite'|trans }}" class="form-control"/>
        </div>
        <div class="checkbox">
            <label>
                <input ng-model="userInfos.newsletter" type="checkbox"> {{ 'profileSettings.newsletter'|trans }}
            </label>
        </div>
        <div class="margiv-top-10">
            <input type="submit" ng-show="userChange.$valid" value="{{ 'profileSettings.save'|trans }}" class="btn green"/>
            <input class="btn default" type="reset" value="{{ 'profileSettings.cancel'|trans }}"/>
        </div>
    </form>
</div>