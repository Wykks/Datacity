{% trans_default_domain "tickets" %}
{% verbatim %}
<div class="portlet box blue">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-reorder"></i>{% endverbatim %}{{ 'tickets.formAddTicket'|trans }}{% verbatim %}
		</div>
	</div>
	<div class="portlet-body form">
		<!-- BEGIN FORM-->
		<form ng-submit="submit()" class="form-horizontal">
			<div class="form-body">
				<div class="form-group">
					<label class="col-md-2 control-label">{% endverbatim %}{{ 'tickets.formTitleTicket'|trans }}{% verbatim %} <strong style="color:red;">*</strong></label>
					<div class="col-md-8">
						<input data-ng-model="ticket.title" type="text" class="form-control" {% endverbatim %} placeholder=""{% verbatim %} value="">
					</div>

				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">{% endverbatim %}{{ 'tickets.formMessageTicket'|trans }}{% verbatim %}</label>
					<div class="col-md-8">
						<textarea data-ng-model="ticket.message" class="form-control" {% endverbatim %}placeholder=""{% verbatim %} rows="5"></textarea>
					</div>
				</div>
			<div class="form-actions fluid dataset-actions">
				<div class="col-md-offset-3 col-md-9">
					<button type="submit" class="btn blue">{% endverbatim %}{{ 'tickets.save'|trans }}{% verbatim %}</button>
				</div>
			</div>
		</form>
	</div>
</div>
{% endverbatim %}

