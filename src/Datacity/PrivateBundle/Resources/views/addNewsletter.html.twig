{% extends 'DatacityPrivateBundle:Template:body.html.twig' %}
{% trans_default_domain "newsletter" %}
{% block pageTitle %}{{ 'newsletter.title'|trans }}{% endblock %}
{% block lineTitleLink %}{{ 'newsletter.titleLink'|trans }}{% endblock %}

{% block pagecontent %}

<h3></h3>

<div class="row">
	<div class="col-md-12 ">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-reorder"></i>{{ 'newsletters.form'|trans }}
				</div>

			</div>
			<div class="portlet-body form">
				<form action="{{path('datacity_private_admin_newsletter_add')}}" method="post" {{ form_enctype(form) }}>
					<div class="form-body">
						<div class="form-group">
							<label>{{ form_label(form.object, "Objet") }}</label>
							 {{ form_errors(form.object) }}
							{{ form_widget(form.object, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							<label>{{ form_label(form.message, "Message") }}</label>
							 {{ form_errors(form.message) }}
							{{ form_widget(form.message, {'attr': {'class': 'form-control', 'style': 'resize: none; height:100px'}}) }}

						</div>
						{{ form_rest(form) }}
					</div>
					<div class="form-actions">
						<center><input type="submit" class="btn green" value = "{{ 'newsletters.add'|trans }}"></center>
					</div>

					</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}
