{% trans_default_domain "modal" %}
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" ng-show="title">
        <button type="button" class="close" ng-click="$hide()">&times;</button>
        <h4 class="modal-title" ng-bind="title"></h4>
      </div>
      <div class="modal-body" ng-bind="content"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="$hide()">{{ 'modal.back'|trans }}</button>
        <button type="button" class="btn btn-warning" ng-click="confirm(); $hide()">{{ 'modal.next'|trans }}</button>
      </div>
    </div>
  </div>
</div>