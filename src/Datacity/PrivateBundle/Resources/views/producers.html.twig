{% extends 'DatacityPrivateBundle:Template:body.html.twig' %}
{% trans_default_domain "producers" %}
{% block pageTitle %}{{ 'producers.title'|trans }}{% endblock %}
{% block lineTitleLink %}{{ 'producers.titleLink'|trans }}{% endblock %}
{% block pagecontent %}


<a href="{{ path('datacity_private_producers_post') }}" class="btn btn-lg green">{{ 'producers.add'|trans }} <i class="fa fa-plus"></i></a><br><br>
<!-- BEGIN SAMPLE TABLE PORTLET-->
					<div class="portlet">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-bell-o"></i>{{ 'producers.table'|trans }} ({{producers|length}} {{ 'producers.added'|trans }})
							</div>
						</div>
						<div class="portlet-body">
							<div class="table-responsive">
								<table class="table table-striped table-bordered table-advance table-hover">
								<thead>
								<tr>
									<th>
										<i class="fa fa-user"></i> {{ 'producers.name'|trans }}
									</th>
									<th class="hidden-xs">
										<i class="fa fa-bookmark"></i> Description
									</th>
									<th class="hidden-xs">
										<i class="fa fa-bookmark"></i> {{ 'producers.link'|trans }}
									</th>
									<th>
									</th>
								</tr>
								</thead>
								<tbody>
								{% for producer in producers %}
									<tr id="row-producer-{{producer.getId()}}">
									<td class="highlight">
										<div class="success">
										</div>
										<a href="#">{{ producer.name }}</a>
									</td>
									<td class="hidden-xs">
										{% if producer.description |length > 50 %}
										{{ producer.description |slice(0, 50)}}...
										{% else %}
										{{ producer.description}}
										{% endif %}
									</td>
									<td>
										{% if producer.link |length > 100 %}
										{{ producer.link |slice(0, 100)}}...
										{% else %}
										{{producer.link}}
										{% endif %}
									</td>
									<td>
										<a  href="{{ path('datacity_private_producers_edit', { name: producer.name }) }}" class="btn default btn-xs black"><i class="fa fa-trash-o"></i> Edit</a>
										<a data-toggle="modal" href="#basic" onClick="setDeleteProducer('{{ producer.slug }}', '{{ producer.name|e('js') }} ');" class="btn default btn-xs black"><i class="fa fa-trash-o"></i> Delete</a>
									</td>
								</tr>
								{% endfor %}
								</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
									<h4 class="modal-title">{{ 'producers.deleteProd'|trans }}</h4>
								</div>
								<div class="modal-body">
									 {{ 'producers.warn'|trans }} <span id='producerToDeleteName'></span>.<br/>{{ 'producers.confirm'|trans }}.
								</div>
								<div class="modal-footer">
									<button type="button" class="btn default" data-dismiss="modal">{{ 'producers.close'|trans }}</button>
									<button id="buttonDeleteProducer" type="button" class="btn blue" onClick="" data-dismiss="modal">{{ 'producers.confirmDel'|trans }}</button>
								</div>
							</div>
							<!-- /.modal-content -->
						</div>
						<!-- /.modal-dialog -->
					</div>
					<!-- END SAMPLE TABLE PORTLET-->

{% endblock %}
{% block javascripts %}
{{ parent() }}
	<script type="text/javascript">
		function deleteProducer(slug) {
		$.ajax({
		    type: 'DELETE',
		    dataType: 'json',
		    url: Routing.generate('datacity_private_producers_remove', { slug: slug }),
		    success: function(response) {
		        $("#row-producer-" + response['id']).fadeOut(300, function() { $(this).remove(); });
		      }
		  });
		}
	function setDeleteProducer(slug, name) {
		$("#buttonDeleteProducer").attr("onClick", "deleteProducer('" + slug + "');")
		$("#producerToDeleteName").html(name);

	}
	</script>
{% endblock %}
