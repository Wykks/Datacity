{% extends 'DatacityPrivateBundle:Template:body.html.twig' %}
{% trans_default_domain "application" %}
{% block pageTitle %}{{ 'application.title'|trans }}{% endblock %}
{% block lineTitleLink %}{{ 'application.titleLink'|trans }}{% endblock %}

{% block pagecontent %}

<h3></h3>

<div class="row">
	<div class="col-md-12 ">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-reorder"></i>{{ 'application.form'|trans }}
				</div>

			</div>
			<div class="portlet-body form">
				<form action="{{path('datacity_private_applications_post')}}" method="post" {{ form_enctype(form) }}>
					<div class="form-body">
						<div class="form-group">
							<label>{{ form_label(form.name, "Nom") }}</label>
							 {{ form_errors(form.name) }}
							{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							<label>{{ form_label(form.description, "Description") }}</label>
							 {{ form_errors(form.description) }}
							{{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'resize: none; height:100px'}}) }}

						</div>
						<div class="form-group">
							<label>{{ form_label(form.city, "Ville") }}</label>
							 {{ form_errors(form.city) }}
							{{ form_widget(form.city, {'attr': {'class': 'form-control', 'style': 'resize: none; height:30px;width:250px'}}) }}

						</div>
						<div class="form-group">
							<label>{{ form_label(form.categories, "Categories") }}</label>
							 {{ form_errors(form.categories) }}
							{{ form_widget(form.categories, {'attr': {'class': 'form-control', 'style': 'resize: none; height:100px;width:250px'}}) }}

						</div>
						<div class="form-group">
							<label>{{ form_label(form.platforms, "Plates-formes") }}</label>
							 {{ form_errors(form.platforms) }}
							{{ form_widget(form.platforms, {'attr': {'class': 'form-control', 'style': 'resize: none; height:100px;width:250px'}}) }}

						</div>
						<div class="form-group">
							<label>{{ form_label(form.images, " ") }}</label>
							 {{ form_errors(form.images) }}
							{{ form_widget(form.images) }}
						</div>

						{{ form_rest(form) }}
					</div>
					<div class="form-actions">
						<center><input type="submit" class="btn green" value = "{{ 'application.add'|trans }}"></center>
					</div>

					</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}
